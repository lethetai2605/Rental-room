<div class="container">
  <div class="row justify-content-center">
		<div class="col-xl-10 col-lg-12 col-md-9">
			<div class="card o-hidden border-0 shadow-lg my-5">
				<div class="card-body p-0">
					<div class="row">
						<div class="col-lg-6 d-none d-lg-block login-bg"></div>
						<div class="col-lg-6">
							<div class="p-5">
								<div class="text-center">
									<h1 class="h4 text-gray-900 mb-4">Create new account</h1>
								</div>
								<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "user"}) do |f| %>
									<div class="form-group">
										<%= f.email_field :email, autofocus: true, placeholder:"Email Address", class: "form-control form-control-user" %>
									</div>

									<div class="form-group">
                    <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
										<%= f.password_field :password, placeholder:"Password", class: "form-control form-control-user" %>
									</div>

                  <div class="form-group">
                    <%= f.password_field :password_confirmation, placeholder: "Repeat password", class: 'form-control form-control-user' %>
                  </div>

                  <div>
                    <%= link_to "Login with email", new_account_session_path, class: "text-center d-block mb-3"%>
                  </div>
									<%= f.submit "Sign up", class: 'btn btn-primary btn-user' %>
                <% end %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
  </div>
</div>

