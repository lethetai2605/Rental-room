
<div class="container">
  <div class="row justify-content-center">
		<div class="col-xl-10 col-lg-12 col-md-9">
			<div class="card o-hidden border-0 shadow-lg my-5">
				<div class="card-body p-0">
					<div class="row">
						<div class="col-lg-6 d-none d-lg-block login-bg"></div>
						<div class="col-lg-6">
							<div class="p-5">
								<div class="text-center">
									<h1 class="h4 text-gray-900 mb-4">Forgot your password</h1>
								</div>
								<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, class: "user"}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

									<div class="form-floating mb-4">
										<%= f.email_field :email, placeholder:"Email", autofocus: true, autocomplete: "email", class: "form-control" %>
                    <%= f.label :email, "Email Address" %>
									</div>

									<%= f.submit "Send me reset password instructions", class: 'btn btn-primary w-100 btn-user' %>
									<hr>
									<% end %>
								<%= link_to 'Create new account', new_account_registration_path, class: "text-center d-block" %>
								<%= link_to 'Back to Login', new_account_session_path, class: "text-center d-block" %>
							</div>
						</div>
					</div>
				</div>
			</div>

		</div>

  </div>
  <%# <%= render "devise/shared/links" %> 

</div>
